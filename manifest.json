{
    "manifest_version": 3,
    "name": "Pagy Blocker",
    "version": "11.0",
    "description": "Effizienter Werbeblocker für Chrome mit nativer declarativeNetRequest API für bessere Performance und Privatsphäre.",
    "author": "Pagy Team",
    "permissions": ["storage", "declarativeNetRequest", "declarativeNetRequestFeedback", "tabs"],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["content/content-wrapper.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Pagy Blocker - Domain-basierte Filtersteuerung"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "pagy_ruleset_optimized",
                "enabled": true,
                "path": "filter_lists/filter_precompiled.json"
            }
        ]
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content/content.js",
                "core/logger.js",
                "core/utilities.js",
                "core/config.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'none';"
    }
}
